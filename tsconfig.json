{
  "compilerOptions": {
    "outDir": "./build",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "jsx": "react-jsx"
  },
  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"]
}
